{
  "name": "cosmiconfig-typescript-loader",
  "version": "3.0.0",
  "description": "TypeScript loader for cosmiconfig",
  "author": "Alex Miller <codex.nz@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/Codex-/cosmiconfig-typescript-loader#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Codex-/cosmiconfig-typescript-loader.git"
  },
  "bugs": {
    "url": "https://github.com/Codex-/cosmiconfig-typescript-loader/issues"
  },
  "files": [
    "dist/**/*"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "scripts": {
    "build": "npm run build:types && npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.build.json",
    "check:types": "tsc -p tsconfig.json",
    "format:check": "prettier --check \"{**/*,*}.{js,ts}\"",
    "format:write": "npm run format:check -- --write",
    "lint": "eslint --ext \".js,.ts\" .",
    "lint:fix": "npm run lint -- --fix",
    "release": "release-it",
    "test": "jest"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "peerDependencies": {
    "@types/node": "*",
    "cosmiconfig": ">=7",
    "ts-node": ">=10",
    "typescript": ">=3"
  },
  "devDependencies": {
    "@types/jest": "^28.1.3",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.1",
    "prettier": "^2.7.1",
    "release-it": "^15.1.0",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  },
  "keywords": [
    "cosmiconfig",
    "typescript"
  ]
}
