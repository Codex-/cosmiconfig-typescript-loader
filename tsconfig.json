{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "noEmit": true,
    "pretty": true,
    "sourceMap": true,
    "declaration": true,

    "outDir": "dist",
    "rootDir": "lib",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "moduleResolution": "node",
    "strict": true
  },
  "include": ["lib"],
  "exclude": ["**/__fixtures__/**/*"]
}
